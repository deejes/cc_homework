<div class="container">

  <!-- <h2>Idea Page</h2> -->

  <h2>
    Title: <%= @idea.title %>
  </h2>
  <br>
  <div class="container border">
    <!-- <br>
    <br> -->
    <p>
      <%= @idea.description %>
    </p>
  </div>
</div>
<br>

<div class="container ">
<% if user_signed_in? %>
<%= form_for [@idea, @review] do |f| %>
  <div>
    <%= f.text_area :body %>
  </div>
  <%= f.submit %>
<% end %>
<% end %>



</div>


<br>


<div class="container">
<ul class='review-list'>
<% @reviews.each do |r| %>
  <div class="container border">

    <li>
      <p><%= r.body %></p>
      <p><strong>Commentor: </strong> <%= r.user&.first_name %></p>

      <% if r.user == current_user%>
      <%= link_to "Delete", idea_review_path(@idea, r), method: :delete, data: { confirm: 'Are you sure?'} %>
      

      <%end%>
      <%# https://apidock.com/rails/ActiveSupport/CoreExtensions/DateTime/Conversions/to_formatted_s %>
    </li>
  </div>
<% end %>
</ul>


</div>
